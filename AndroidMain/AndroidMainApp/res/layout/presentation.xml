<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:background="@drawable/presentation_bg" android:layout_width="fill_parent"
    android:layout_height="fill_parent">
  
  <ImageView  
        android:layout_height="fill_parent"
        android:scaleType="center"
        android:src="@drawable/presentation" 
        android:layout_width="match_parent"/>
        
   <Button android:layout_height="wrap_content" 
   		android:layout_gravity="center_horizontal|center_vertical" 
   		android:layout_marginLeft="300dip" 
   		android:layout_marginTop="280dip" 
   		android:id="@+id/presentationplay" 
   		android:layout_width="wrap_content" 
   		android:padding="10dp" 
   		android:background="@drawable/presentationplay"></Button>
</FrameLayout>

